prototype(Stoj.Site:Templates.TemplateFour) < prototype(Neos.Neos:ContentComponent) {

    lazy = ${q(node).prev().is()}

    src = Neos.Fusion:Case {
        image {
            condition = ${q(node).property('image') ? true : false}
            renderer = Sitegeist.Kaleidoscope:AssetImageSource {
                asset = ${q(node).property('image')}
            }
        }
        dummyImage {
            condition = ${site.context.inBackend}
            renderer = Sitegeist.Kaleidoscope:DummyImageSource
        }
    }
    alternativeText = ${q(node).property('alternativeText')}

    title = Neos.Neos:Editable {
        property = 'title'
    }

    text = Neos.Neos:Editable {
        property = 'text'
    }

    label = Neos.Neos:Editable {
        property = 'label'
    }

    link = ${q(node).property('link')}
    linkTarget = ${q(node).property('linkTarget') ? '_blank' : '_self'}
    renderAsLink = ${site.context.inBackend ? false : true}


renderer = afx`
        <section class="project-four">
            <div class="project-four-image aos">
                <Sitegeist.Lazybones:Image
                    class="project-image aos"
                    lazy={true}
                    lazyWidth={380}
                    imageSource={props.src}
                    srcset="320w, 400w, 480w, 600w, 640w, 720w, 768w, 800w, 960w, 1024px, 1280w, 1440w, 1600w, 1680w, 1920w, 2560w"
                    sizes={props.sizes}
                    alt={props.alternativeText}
                    />
            </div>
            <div class="project-four-description aos-text">
                <div class="description-wrapper">
                    <h3>{props.title}</h3>
                    {props.text}
                    <Carbon.Link:Link link={props.link} additionalClass="stoj-link">{props.label}</Carbon.Link:Link>
                </div>
            </div>
        </section>
    `
}
