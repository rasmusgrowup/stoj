prototype(Stoj.Site:Content.GalleryItem) < prototype(Neos.Neos:ContentComponent) {
    src = Neos.Fusion:Case {
        image {
            condition = ${q(node).property('image') ? true : false}
            renderer = Neos.Neos:ImageUri {
                asset = ${q(node).property('image')}
            }
        }
        dummyImage {
            condition = ${site.context.inBackend}
            renderer = Neos.Fusion:ResourceUri {
                path = 'resource://Neos.Neos/Public/Images/dummy-image.svg'
            }
        }
    }
    alternativeText = ${q(node).property('alternativeText')}

    id = ${'gallery-item gallery-fade ' + q(node).property('id')}

    renderer = afx`
    <div class={props.id}>
        <img class="gallery-image" src={props.src} alt={props.alternativeText} />
    </div>
    `
}
