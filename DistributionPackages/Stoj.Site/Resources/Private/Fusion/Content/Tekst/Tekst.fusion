prototype(Stoj.Site:Content.Tekst) < prototype(Neos.Neos:ContentComponent) {
    tekst = Neos.Neos:Editable {
        property = 'tekst'
    }

    small = ${q(node).property('small') ? ' text-width' : ''}

    renderer = afx`
        <div class={"tekst --standard" + (props.small)}>{props.tekst}</div>
    `
}
