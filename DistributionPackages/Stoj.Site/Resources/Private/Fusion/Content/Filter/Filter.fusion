        <div class="filter-body" id="filter-list">
            <button class="filter__btn active" onclick="filterSelection('alle')">Alle</button>
            <button class="filter__btn" onclick="filterSelection('dyr')">Dyr</button>
            <button class="filter__btn" onclick="filterSelection('kommerciel')">Kommerciel</button>
