    chevron = Neos.Fusion:ResourceUri {
    path = 'resource://Stoj.Site/Public/Frontend/icons/chevron.svg'
    }

    renderer = afx`
    <div class="filter-header" id="open-button"><p>Filtr√©r galleriet</p><img src={props.chevron} alt="" /></div>
